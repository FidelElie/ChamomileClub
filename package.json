    "license": "MIT",
    "private": true,
    "workspaces": [
        "packages/*",
        "apps/*"
    ],
    "scripts": {
        "clean": "bun run ./scripts/clean.ts",
        "@website": "bun run --cwd apps/website",
        "@server": "bun run --cwd apps/server",
        "@mobile": "bun run --cwd apps/mobile",
        "@api": "bun run --cwd packages/api",
        "@database": "bun run --cwd packages/database",
        "@tailwind": "bun run --cwd packages/tailwind",
        "@ui": "bun run --cwd packages/ui"
    },
    "devDependencies": {
        "concurrently": "^7.6.0",
        "commander": "^11.0.0",
        "rimraf": "^5.0.1",
        "ts-node": "^10.9.1",
        "turbo": "^1.10.7"
    }
}

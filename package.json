{
  "name": "thechamomileclub",
  "version": "1.0.0",
  "author": "Fidel Elie",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "test": "turbo test",
    "lint": "turbo lint",
    "types": "turbo types",
    "format": "dprint fmt",
    "pre-commit": "lint-staged",
    "prepare": "pnpm @scripts husky",
    "clean": "pnpm @scripts clean",
    "@website": "pnpm --filter @thechamomileclub/website",
    "@server": "pnpm --filter @thechamomileclub/server",
    "@mobile": "pnpm --filter  @thechamomileclub/mobile",
    "@api": "pnpm --filter @thechamomileclub/api",
    "@database": "pnpm --filter @thechamomileclub/database",
    "@tailwind": "pnpm --filter @thechamomileclub/tailwind",
    "@ui": "pnpm --filter @thechamomileclub/ui",
    "@scripts": "pnpm --filter @thechamomileclub/scripts",
    "@common": "pnpm --filter @thechamomileclub/common"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.2",
    "dprint": "^0.45.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "ts-node": "^10.9.1",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3"
  },
  "trustedDependencies": [
    "husky"
  ],
  "lint-staged": {
    "**/*": [
      "pnpm format --allow-no-files"
    ]
  }
}

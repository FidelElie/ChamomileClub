{
  "name": "thechamomileclub",
  "version": "1.0.0",
  "author": "Fidel Elie",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "scripts",
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "test": "turbo test",
    "lint": "turbo lint",
    "types": "turbo types",
    "format": "dprint fmt",
    "pre-commit": "lint-staged",
    "prepare": "bun @scripts husky",
    "clean": "bun @scripts clean",
    "@website": "bun run --cwd 'apps/website'",
    "@server": "bun run --cwd 'apps/server'",
    "@mobile": "bun run --cwd  'apps/mobile'",
    "@api": "bun run --cwd 'packages/api'",
    "@database": "bun run --cwd 'packages/database'",
    "@tailwind": "bun run --cwd 'packages/tailwind'",
    "@ui": "bun run --cwd 'packages/ui'",
    "@scripts": "bun run --cwd 'scripts'"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.2",
    "dprint": "^0.45.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "ts-node": "^10.9.1",
    "turbo": "^1.11.3"
  },
  "trustedDependencies": [
    "husky"
  ],
  "lint-staged": {
    "**/*": [
      "bun format --allow-no-files"
    ]
  }
}
